#!/usr/bin/env bash
rm -f .coverage && \
rm -f .coverage.* && \

echo "### Specs" && \
nosetests spec && \
mv .coverage .coverage.spec && \

echo "### Integration tests" && \
nosetests tests/integration && \
mv .coverage .coverage.integration && \

echo "### Acceptance tests" && \
behave && \

pep8 && \

coverage combine && \
coverage report
